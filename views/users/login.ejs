<% layout('../layouts/boilerplate') %>


    <div class="container d-flex justify-content-center align-items-center my-auto mt-2 mb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-8 offset-xl-2">
                <div class="card shadow">
                    <img class="card-img-top"
                        src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=773&q=80"
                        alt="/loginImg">
                    <div class="card-body">


                        <h1 class="card-title display-3 text-sm">
                            Login
                        </h1>
                        <form action="/login" class=" form-group needs-validation mb-3" method="post" novalidate>
                            <div class="mb-3">
                                <label for="username">Username</label>
                                <input autofocus class="form-control" type="text" name="username" id="username"
                                    required>

                                <div class="invalid-feedback">
                                    Valid username please?
                                </div>
                            </div>


                            <div class="mb-3">
                                <label for="pwd">Password</label>
                                <input class="form-control" type="password" name="password" id="pwd" required>

                                <div class="invalid-feedback">
                                    Have you never been to a website before?
                                </div>

                            </div>

                            <div class="d-grid">
                                <button class="btn btn-success" type="submit">
                                    Lessgo!
                                </button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>